{
	"info": {
		"_postman_id": "69d7f145-e93e-49c6-b67e-e8365368f65b",
		"name": "demo-permissions",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if(pm.response.code == 200) {",
							"    pm.environment.set('token', pm.response.json().token);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "tenant",
						"value": "root",
						"type": "default"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"admin@root.com\",\n  \"password\": \"123Pa$$word!\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/tokens",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"tokens"
					]
				}
			},
			"response": []
		},
		{
			"name": "demo-setup",
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{token}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [
					{
						"key": "tenant",
						"value": "{{tenant}}",
						"type": "default"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/v1/demo",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"api",
						"v1",
						"demo"
					]
				}
			},
			"response": []
		}
	]
}